<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atrás"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor de pH"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/usuario" />
        </RelativeLayout>

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es necesario ingresar el correo electrónico del profesor para poder enviarle los resultados."
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_box"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email @"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="you@example.com"
                    android:background="@drawable/rounded_field_box"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSubmitEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:backgroundTint="#333333"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rectifica el correo electrónico"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputConfirmEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="you@example.com"
                    android:background="@drawable/rounded_field_box"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSubmitConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:backgroundTint="#333333"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón Mandar -->
        <Button
            android:id="@+id/btnMandar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandar ➔"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:layout_marginTop="48dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>