<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5FA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Encabezado superior -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atrás"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensor de pH"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créditos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Sección de desarrolladores -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desarrolladores:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andrade Luviano Ximena\nIslas Espino Julio César\nYáñez Díaz Carlos"
            android:layout_marginBottom="24dp" />

        <!-- Sección ICAT -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ICAT"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versión: ...\nCentro de ayuda\nPolíticas y condiciones" />

    </LinearLayout>
</ScrollView>
